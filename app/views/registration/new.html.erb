<h1>Criar nova conta</h1>

<%= form_with model: @user, url: signup_path, data: { turbo: false }, local: true do |form| %>
    <% if @user.errors.any? %>
        <div class="alert alert-danger">
            <% @user.errors.full_messages.each do |message| %>
                <div><%= message %></div>
            <% end %>
        </div>
    <% end %>

    <div class="mb-3">
        <%= form.label :email %>
        <%= form.email_field :email, class: "form-control", placeholder: "nome@email.com" %>
    </div>
    <div class="mb-3">
        <%= form.label :senha %>
        <%= form.password_field :password, class: "form-control", placeholder: "Sua senha aqui" %>
    </div>
    <div class="mb-3">
        <%= form.label :confirmar_senha %>
        <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Sua senha aqui" %>
    </div>

    <div class="mb-3">
        <%= form.submit "Cadastrar", class: "btn btn-primary" %>
    </div>
<% end %>
